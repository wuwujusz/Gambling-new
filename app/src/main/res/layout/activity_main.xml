<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MainLayoutStyle">


    <TextView
        android:id="@+id/tytul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TitleTextStyle"
        android:text="Gra w kości. Autor: Mikołaj Mikoś"/>

    <Button
        android:id="@+id/button_rzut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"
        android:text="RZUĆ KOŚĆMI"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rzut1"
            style="@style/TextStyle"
            android:text="?"/>

        <TextView
            android:id="@+id/rzut2"
            style="@style/TextStyle"
            android:text="?"/>

        <TextView
            android:id="@+id/rzut3"
            style="@style/TextStyle"
            android:text="?"/>

        <TextView
            android:id="@+id/rzut4"
            style="@style/TextStyle"
            android:text="?"/>

        <TextView
            android:id="@+id/rzut5"
            style="@style/TextStyle"
            android:text="?"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dice1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/d0"
            />

        <ImageView
            android:id="@+id/dice2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/d0"
            />

        <ImageView
            android:id="@+id/dice3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/d0"
            />

        <ImageView
            android:id="@+id/dice4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/d0"
            />

        <ImageView
            android:id="@+id/dice5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/d0"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/wynik_losowania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ResultStyle"
        android:text="Wynik tego losowania: 0" />

    <TextView
        android:id="@+id/wynik_gry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ResultStyle"
        android:text="Wynik gry: 0" />

    <TextView
        android:id="@+id/liczba_rzutow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ResultStyle"
        android:text="Liczba rzutów: 0" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"
        android:text="RESETUJ WYNIK"/>




</LinearLayout>
